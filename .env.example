# ============================================
# Farm Manager Bot - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ============================================
# Authentication (Choose ONE method)
# ============================================

# Option 1: Email/Password Login (existing account)
# FARM_EMAIL=your_email@example.com
# FARM_PASSWORD=your_password

# Option 2: Android Token (captured from app)
# ANDROID_ACCESS_TOKEN=guest_android_xxxxx...

# Option 3: Manual Session (PHPSESSID)
# PHPSESSID=your_session_id_here

# Option 4: Create new guest account automatically
# CREATE_NEW_GUEST=true

# ============================================
# Bot Configuration
# ============================================

# Check interval in milliseconds (default: 120000 = 2 minutes)
CHECK_INTERVAL_MS=120000

# Silo percentage threshold for automatic sale (default: 80)
SILO_SELL_THRESHOLD=80

# Enable debug logs (true/false)
DEBUG=false

# ============================================
# Tractor Configuration
# ============================================

# Maximum tractors per operation (default: 4)
MAX_TRACTORS_PER_OP=4

# Maximum time (in minutes) a field can be idle waiting for a tractor (default: 30)
MAX_IDLE_TIME_MINUTES=30
